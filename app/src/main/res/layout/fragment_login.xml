<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/car_final"
    tools:context=".auth.loginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:gravity="center"
                    
                    android:text="H"
                    android:textAlignment="center"
                    android:textColor="@color/gblue"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="A"
                    android:textAlignment="center"
                    android:textColor="@color/gred"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="C"
                    android:textAlignment="center"
                    android:textColor="@color/gyellow"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="K"
                    android:textAlignment="center"
                    android:textColor="@color/ggreen"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="F"
                    android:textAlignment="center"
                    android:textColor="@color/gblue"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="E"
                    android:textAlignment="center"
                    android:textColor="@color/gred"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="@color/gyellow"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="@color/ggreen"
                    android:textSize="60sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IIT(ISM) Dhanbad"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/lexend"/>


            <EditText
                android:id="@+id/teamNameEditTextLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="100dp"

                android:drawableStart="@drawable/person"
                android:drawablePadding="20dp"
                android:hint="Team Name"
                android:background="@drawable/counter"
                android:fontFamily="@font/lexend"
                android:padding="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"

                android:cursorVisible="true"
                android:textSize="25sp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"

                android:drawableStart="@drawable/lock"
                android:drawablePadding="20dp"
                android:hint="Password"
                android:background="@drawable/counter"
                android:padding="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"

                android:textSize="25sp"
                android:fontFamily="@font/lexend"
                />




            <TextView
                android:id="@+id/DontSignupTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Change password?"
                android:textColor="#09E1FF"
                android:visibility="gone"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/LoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_background"
                android:padding="20dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/lexend"/>

        </LinearLayout>

        <include layout="@layout/loading_screen"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/loading_card"
            />

    </RelativeLayout>

</ScrollView>