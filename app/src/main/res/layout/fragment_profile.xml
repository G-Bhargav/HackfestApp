<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:paddingTop="80dp"
    tools:context=".ui.profilefragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEAM"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/genos_bold"
                    />
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/baseline_person_24_white"
                    app:layout_constraintTop_toBottomOf="@+id/hackfest_text" />


                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="name"
                    android:fontFamily="@font/genos_light"
                    android:textColor="@color/white"
                    android:textSize="35dp" />


                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="position"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:fontFamily="@font/genos_light"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/pitchblack"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_call_24_white" />

                        <TextView
                            android:id="@+id/Mobile"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Phone No."
                            android:textSize="25dp"
                            android:fontFamily="@font/genos_light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/pitchblack"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_email_24" />

                        <TextView
                            android:id="@+id/Email"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Email"
                            android:textSize="25dp"
                            android:fontFamily="@font/genos_light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/pitchblack"
                        android:gravity="center_horizontal"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/Organization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="organization"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:fontFamily="@font/genos_light"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/genos_light"
            android:background="@drawable/button_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            />


    </RelativeLayout>
</ScrollView>
